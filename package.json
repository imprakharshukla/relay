{
  "name": "relay-one",
  "version": "0.1.0",
  "description": "AI-powered Linear issue creation with automatic git worktree setup",
  "type": "module",
  "bin": {
    "relay": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "dev:watch": "bun --watch run src/cli.tsx",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "start": "bun run dist/cli.js",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "linear",
    "cli",
    "ai",
    "productivity",
    "git",
    "worktree",
    "openrouter",
    "workflow",
    "automation"
  ],
  "author": "Prakhar Shukla",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imprakharshukla/relay.git"
  },
  "bugs": {
    "url": "https://github.com/imprakharshukla/relay/issues"
  },
  "homepage": "https://github.com/imprakharshukla/relay#readme",
  "dependencies": {
    "@ai-sdk/openai": "^1.0.11",
    "@linear/sdk": "^60.0.0",
    "ai": "^4.0.45",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "execa": "^9.5.2",
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
