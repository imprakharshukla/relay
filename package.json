{
  "name": "relay-cli",
  "version": "0.1.0",
  "description": "AI-powered Linear issue creation with automatic git worktree setup",
  "type": "module",
  "bin": {
    "relay": "./dist/cli.js"
  },
  "scripts": {
    "dev": "bun run src/cli.tsx",
    "dev:watch": "bun --watch run src/cli.tsx",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "start": "bun run dist/cli.js",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "linear",
    "cli",
    "ai",
    "productivity",
    "git",
    "worktree"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^1.0.11",
    "@linear/sdk": "^60.0.0",
    "ai": "^4.0.45",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "execa": "^9.5.2",
    "ink": "^5.0.1",
    "ink-markdown": "^1.0.4",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.3.18",
    "tsdown": "^0.2.17",
    "typescript": "^5.7.3"
  }
}
